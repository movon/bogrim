<!-- Top content -->
<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-7 text" style="background: rgba(128,128,128,0.7);padding: 3%!important;">
          <h1 style="color: brown!important;font-weight: bolder!important;"><strong>Yedidim</strong> Registration Form</h1>
          <div class="description">
            <p>
              *Form explanation here*
            </p>
          </div>
          <div class="top-big-link">
            <a class="btn btn-link-2" href="/">About</a>
          </div>
        </div>
        <div class="col-sm-5 col-lg-5 form-box">
          <div class="form-top">
            <div class="form-top-right" style="width: auto">
              <h3 style="direction: rtl">הרשם עכשיו!</h3>
            </div>
            <div class="form-top-left" style="width: auto">
              <i class="fa fa-pencil"></i>
            </div>
          </div>
          <div class="form-bottom">
            <form role="form" action="/register" method="post" class="registration-form" onsubmit="return thanks()" id="registerForm">
              <div class="form-group">
                <label class="sr-only" for="firstName">First name</label>
                <input type="text" name="firstName" placeholder="שם פרטי..." class="form-first-name form-control" id="form-first-name" style="direction: rtl">
              </div>
              <div class="form-group">
                <label class="sr-only" for="lastName">Last name</label>
                <input type="text" name="lastName" placeholder="שם משפחה..." class="form-last-name form-control" id="form-last-name" style="direction: rtl">
              </div>
              <div class="form-group">
                <label class="sr-only" for="email">Email</label>
                <input type="text" name="email" placeholder="אימייל..." class="form-email form-control" id="form-email" onclick="flip()" style="direction: rtl">
              </div>
              <div class="form-group">
                <label class="sr-only" for="password">password</label>
                <input type="password" required name="password" placeholder="סיסמא..." class="form-password form-control" id="form-password">
              </div>

                <div class="checkbox" style="float: right">

                  <!-- THIS IS BOGER -->
                  <span>הורה</span>
                  <label><input type="checkbox" value="boger" id="boger" name="boger" onclick="bogerHide();" style="margin-top: 9px"></label>

                  <!-- THIS IS OTHER -->
                  <span>בוגר</span>
                  <label><input type="checkbox" value="other" name="other" style="margin-top: 9px"></label>

                  <!-- THIS IS PARENT -->
                  <span>אחר</span>
                  <label><input type="checkbox" value="parent" id="parent" name="parent" onclick="hide();" style="margin-top: 9px"></label>
                </div>

              <div id="hidden-parent" style="float: right; direction: rtl; width: 100%">
                <label id="hidden-parent-text"  style="float: right"><input type="" name="kidName" id="kidName"></label>
              </div>
              <div id="hidden-boger" style="float:right; direction: rtl; width: 100%">
                <label id="hidden-boger-text"  style="float: right"><input type="" class="form-number" name="yearFinished" id="yearFinished"></label>
              </div>
              <div class="form-group">
                <label class="sr-only" for="form-about-yourself">About yourself</label>
			                        	<textarea name="about" placeholder="על עצמך..." style="direction: rtl"
                                                  class="form-about-yourself form-control" id="about"></textarea>
              </div>
              <button type="submit" class="btn">!הרשם</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-info- btm-md" id="myBtn" style="display: none"></button>
  <div id="myModal" class="modal fade" role="dialog">
